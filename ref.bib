@article{akrami_planck_2020,
	title = {Planck 2018 results - {X}. {Constraints} on inflation},
	volume = {641},
	copyright = {© Planck Collaboration 2020},
	issn = {0004-6361, 1432-0746},
	url = {https://www.aanda.org/articles/aa/abs/2020/09/aa33887-18/aa33887-18.html},
	doi = {10.1051/0004-6361/201833887},
	abstract = {We report on the implications for cosmic inflation of the 2018 release of the {\textless}i{\textgreater}Planck{\textless}i/{\textgreater} cosmic microwave background (CMB) anisotropy measurements. The results are fully consistent with those reported using the data from the two previous {\textless}i{\textgreater}Planck{\textless}i/{\textgreater} cosmological releases, but have smaller uncertainties thanks to improvements in the characterization of polarization at low and high multipoles. {\textless}i{\textgreater}Planck{\textless}i/{\textgreater} temperature, polarization, and lensing data determine the spectral index of scalar perturbations to be {\textless}i{\textgreater}n{\textless}i/{\textgreater}{\textless}sub{\textgreater}s{\textless}sub/{\textgreater} = 0.9649 ± 0.0042 at 68\% CL. We find no evidence for a scale dependence of {\textless}i{\textgreater}n{\textless}i/{\textgreater}{\textless}sub{\textgreater}s{\textless}sub/{\textgreater}, either as a running or as a running of the running. The Universe is found to be consistent with spatial flatness with a precision of 0.4\% at 95\% CL by combining {\textless}i{\textgreater}Planck{\textless}i/{\textgreater} with a compilation of baryon acoustic oscillation data. The {\textless}i{\textgreater}Planck{\textless}i/{\textgreater} 95\% CL upper limit on the tensor-to-scalar ratio, {\textless}i{\textgreater}r{\textless}i/{\textgreater}{\textless}sub{\textgreater}0.002{\textless}sub/{\textgreater} {\textless} 0.10, is further tightened by combining with the BICEP2/Keck Array BK15 data to obtain {\textless}i{\textgreater}r{\textless}i/{\textgreater}{\textless}sub{\textgreater}0.002{\textless}sub/{\textgreater} {\textless} 0.056. In the framework of standard single-field inflationary models with Einstein gravity, these results imply that: (a) the predictions of slow-roll models with a concave potential, {\textless}i{\textgreater}V{\textless}i/{\textgreater}″({\textless}i{\textgreater}ϕ{\textless}i/{\textgrea